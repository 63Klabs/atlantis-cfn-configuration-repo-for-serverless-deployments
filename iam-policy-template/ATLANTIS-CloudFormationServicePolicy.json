{
    "Version": "2012-10-17",
    "Statement": [
        {
			"Sid": "AtlantisPipelineEventRules",
            "Action": [
                "events:PutTargets",
                "events:RemoveTargets",
                "events:PutRule",
                "events:DeleteRule",
                "events:DescribeRule"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:events:$AWS_REGION$:$AWS_ACCOUNT$:rule/$PREFIX$-*"
            ]
        },
        {
            "Sid": "AtlantisPipeline",
            "Action": [
                "cloudformation:*Stack*",
                "cloudformation:CreateChangeSet",
                "cloudformation:ExecuteChangeSet",
                "cloudformation:DeleteChangeSet",
                "cloudformation:DescribeChangeSet",
                "cloudformation:GetTemplate",
                "cloudformation:GetTemplateSummary"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:cloudformation:$AWS_REGION$:$AWS_ACCOUNT$:stack/$PREFIX$-*",
                "arn:aws:cloudformation:$AWS_REGION$:$AWS_ACCOUNT$:stackset/$PREFIX$-*"
            ]
        },
        {
            "Sid": "AtlantisPipelineS3Buckets",
            "Action": [
                "s3:*"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::$S3_ORG_PREFIX$$PREFIX$-*",
                "arn:aws:s3:::$S3_ORG_PREFIX$$PREFIX$-*/*"
            ]
        },
        {
            "Sid": "AtlantisPipelineServices",
            "Action": [
                "codepipeline:*",
                "codebuild:*",
                "iam:ListRoles",
                "logs:*",
                "sns:*"
            ],
            "Effect": "Allow",
            "Resource": "*"
        },
        {
            "Sid": "AtlantisPipelineWorkerRoles",
            "Action": [
                "iam:AttachRolePolicy",
                "iam:CreateRole",
                "iam:DeleteRole",
                "iam:DeleteRolePolicy",
                "iam:DetachRolePolicy",
                "iam:GetRole",
                "iam:PassRole",
                "iam:GetRolePolicy",
                "iam:PutRolePolicy",
                "iam:UntagRole",
                "iam:TagRole"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:iam::$AWS_ACCOUNT$:role/$PREFIX$-Worker-*"
            ]
        },
        {
            "Sid": "AtlantisPipelineRoles",
            "Action": [
                "iam:GetPolicy"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:iam::$AWS_ACCOUNT$:policy/$PREFIX$-*"
            ]
        },
        {
            "Sid": "InspectServiceRole",
            "Action": [
                "iam:ListAttachedRolePolicies"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:iam::$AWS_ACCOUNT$:role/$PREFIX_UPPER$-CloudFormation-Service-Role",
                "arn:aws:iam::$AWS_ACCOUNT$:role/service-role/$PREFIX_UPPER$-CloudFormation-Service-Role"
            ]
        }
    ]
}