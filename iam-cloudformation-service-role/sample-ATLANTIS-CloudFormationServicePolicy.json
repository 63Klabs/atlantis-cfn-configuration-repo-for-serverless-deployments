{
    "Version": "2012-10-17",
    "Statement": [
        {
			"Sid": "AtlantisPipelineEventRules",
            "Action": [
                "events:PutTargets",
                "events:RemoveTargets",
                "events:PutRule",
                "events:DeleteRule",
                "events:DescribeRule"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:events:$AWS_REGION$:$AWS_ACCOUNT$:rule/$PREFIX$-*"
            ]
        },
        {
            "Sid": "AtlantisPipeline",
            "Action": [
                "cloudformation:*Stack*",
                "cloudformation:CreateChangeSet",
                "cloudformation:ExecuteChangeSet",
                "cloudformation:DeleteChangeSet",
                "cloudformation:DescribeChangeSet",
                "cloudformation:GetTemplate",
                "cloudformation:GetTemplateSummary"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:cloudformation:$AWS_REGION$:$AWS_ACCOUNT$:stack/$PREFIX$-*"
            ]
        },
        {
            "Sid": "AtlantisPipelineS3Buckets",
            "Action": [
                "s3:*"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::$S3_ORG_PREFIX$$PREFIX$-*",
                "arn:aws:s3:::$S3_ORG_PREFIX$$PREFIX$-*/*"
            ]
        },
        {
            "Sid": "AtlantisPipelineLogs",
            "Action": [
                "logs:*"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:logs:$AWS_REGION$:$AWS_ACCOUNT$:log-group:/aws/codebuild/$PREFIX$-*"
        },
        {
            "Sid": "AtlantisPipelineServicesCodePipeline",
            "Action": [
                "codepipeline:*"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:codepipeline:$AWS_REGION$:$AWS_ACCOUNT$:$PREFIX$-*"
        },
        {
            "Sid": "AtlantisPipelineServicesCodeBuild",
            "Action": [
                "codebuild:*"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:codebuild:$AWS_REGION$:$AWS_ACCOUNT$:project/$PREFIX$-*"
        },
        {
            "Sid": "AtlantisPipelineIAMReadOnly",
            "Action": [
                "iam:List*",
                "iam:Get*"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:iam::$AWS_ACCOUNT$:policy/*",
                "arn:aws:iam::$AWS_ACCOUNT$:role/*"
            ]
        },
        {
            "Sid": "AtlantisPipelineWorkerRoles",
            "Action": [
                "iam:AttachRolePolicy",
                "iam:CreateRole",
                "iam:DeleteRole",
                "iam:DeleteRolePolicy",
                "iam:DetachRolePolicy",
                "iam:GetRole",
                "iam:PassRole",
                "iam:GetRolePolicy",
                "iam:PutRolePolicy",
                "iam:UntagRole",
                "iam:TagRole"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:iam::$AWS_ACCOUNT$:role/$PREFIX$-Worker-*"
            ]
        },
        {
            "Sid": "InspectServiceRole",
            "Action": [
                "iam:ListAttachedRolePolicies"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:iam::$AWS_ACCOUNT$:role/$PREFIX_UPPER$-CloudFormation-Service-Role",
                "arn:aws:iam::$AWS_ACCOUNT$:role/service-role/$PREFIX_UPPER$-CloudFormation-Service-Role"
            ]
        }
    ]
}